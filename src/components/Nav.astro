---
interface Props {
  logo: string;
  links: Array<{ text: string; url: string }>;
  cta?: { text: string; url: string };
}

const { logo, links, cta } = Astro.props;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-background/95 backdrop-blur-sm border-b border-accent/20" role="navigation" aria-label="Main navigation">
  <div class="container">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="font-heading text-xl md:text-2xl font-bold text-primary hover:text-accent transition-colors">
        {logo}
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {links.map((link) => (
          <a 
            href={link.url} 
            class="text-text hover:text-primary transition-colors font-medium"
          >
            {link.text}
          </a>
        ))}
        {cta && (
          <a 
            href={cta.url} 
            class="bg-primary text-white px-5 py-2 rounded-md hover:bg-secondary transition-colors font-medium"
          >
            {cta.text}
          </a>
        )}
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden p-2 text-text hover:text-primary transition-colors"
        aria-label="Toggle menu"
        aria-expanded="false"
        id="menu-toggle"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 close-icon hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Navigation Menu -->
  <div class="md:hidden hidden bg-background border-t border-accent/20" id="mobile-menu">
    <div class="container py-4 flex flex-col gap-4">
      {links.map((link) => (
        <a 
          href={link.url} 
          class="text-text hover:text-primary transition-colors font-medium py-2"
        >
          {link.text}
        </a>
      ))}
      {cta && (
        <a 
          href={cta.url} 
          class="bg-primary text-white px-5 py-3 rounded-md hover:bg-secondary transition-colors font-medium text-center mt-2"
        >
          {cta.text}
        </a>
      )}
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = menuToggle?.querySelector('.menu-icon');
  const closeIcon = menuToggle?.querySelector('.close-icon');
  
  menuToggle?.addEventListener('click', () => {
    const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
    menuToggle.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
  
  // Close menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      menuToggle?.setAttribute('aria-expanded', 'false');
    });
  });
</script>

<style>
  nav {
    animation: slideDown 0.3s ease-out;
  }
  
  @keyframes slideDown {
    from {
      transform: translateY(-100%);
    }
    to {
      transform: translateY(0);
    }
  }
</style>
