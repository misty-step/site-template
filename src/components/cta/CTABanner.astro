---
interface Props {
  heading: string;
  text: string;
  buttonText: string;
  buttonUrl: string;
}

const { heading, text, buttonText, buttonUrl } = Astro.props;
---

<section class="bg-primary text-white py-16 md:py-24">
  <div class="container text-center">
    <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
      {heading}
    </h2>
    <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto mb-8">
      {text}
    </p>
    <a 
      href={buttonUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block bg-white text-primary px-10 py-4 rounded-md text-lg font-bold hover:bg-accent hover:text-secondary transition-all duration-300 transform hover:scale-105 shadow-lg"
    >
      {buttonText}
    </a>
  </div>
</section>
