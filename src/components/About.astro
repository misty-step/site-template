---
interface Props {
  image: string;
  heading: string;
  text: string;
  reverse?: boolean;
}

const { image, heading, text, reverse = false } = Astro.props;
---

<section class="bg-background" id="about">
  <div class="container">
    <div class={`flex flex-col ${reverse ? 'md:flex-row-reverse' : 'md:flex-row'} items-center gap-8 md:gap-12`}>
      <!-- Image -->
      <div class="w-full md:w-1/2">
        <div class="relative overflow-hidden rounded-lg shadow-xl aspect-[4/3]">
          <img 
            src={image} 
            alt={heading}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </div>
      
      <!-- Text Content -->
      <div class="w-full md:w-1/2">
        <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-primary mb-6">
          {heading}
        </h2>
        <div class="w-20 h-1 bg-accent mb-6"></div>
        <p class="text-text text-lg md:text-xl leading-relaxed">
          {text}
        </p>
      </div>
    </div>
  </div>
</section>
