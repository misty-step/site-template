// Footer.astro
---

<footer class="bg-[#222] text-white py-12 px-6 lg:px-8">
  <div class="container mx-auto grid md:grid-cols-4 gap-8">
    <!-- Logo -->
    <div>
      <img src="/logo.png" alt="Hillside Imports" width="120" class="mb-4">
    </div>

    <!-- Quick Links -->
    <div>
      <h3 class="font-bold text-lg mb-4 font-heading">Quick Links</h3>
      <ul class="space-y-2">
        <li><a href="/" class="hover:text-[var(--color-brand)] transition-colors">Home</a></li>
        <li><a href="/services" class="hover:text-[var(--color-brand)] transition-colors">Services</a></li>
        <li><a href="/faq" class="hover:text-[var(--color-brand)] transition-colors">FAQ</a></li>
        <li><a href="/contact" class="hover:text-[var(--color-brand)] transition-colors">Contact</a></li>
      </ul>
    </div>

    <!-- Contact -->
    <div>
      <h3 class="font-bold text-lg mb-4 font-heading">Contact</h3>
      <p>4402 SW Beaverton Hillsdale Hwy<br>Portland, OR 97221</p>
      <p class="mt-2"><a href="tel:503-293-0146" class="hover:text-[var(--color-brand)]">503-293-0146</a> | <a href="mailto:info@hillsideimports.com">info@hillsideimports.com</a></p>
    </div>

    <!-- Hours -->
    <div>
      <h3 class="font-bold text-lg mb-4 font-heading">Hours</h3>
      <p>Mon – Fri: 8:00 am – 5:00 pm<br>Sat – Sun: Closed</p>
    </div>
  </div>

  <!-- Social & Copyright -->
  <div class="container mx-auto pt-8 border-t border-white/20 text-center text-sm space-y-2">
    <div class="flex justify-center space-x-6 md:space-x-8">
      <a href="https://www.facebook.com/HillsideImports/" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-brand)]">Facebook</a>
      <a href="https://www.instagram.com/hillsideimports/" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-brand)]">Instagram</a>
      <a href="https://www.yelp.com/biz/hillside-imports-portland-2" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-brand)]">Yelp</a>
    </div>
    <p>Demo redesign by <a href="https://mistystep.io" class="font-semibold hover:text-[var(--color-brand)]">Misty Step</a></p>
    <p>&copy; 2026 Hillside Imports</p>
  </div>
</footer>
