---

<footer class="bg-secondary text-white pt-16 pb-6" role="contentinfo">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand & Newsletter -->
      <div class="lg:col-span-2">
        <h3 class="font-heading text-2xl font-bold text-accent mb-4">{name}</h3>
        <p class="text-white/70 mb-6 max-w-md">
          Subscribe to our newsletter for updates, special offers, and exclusive content.
        </p>
        <form class="flex gap-2" onsubmit="event.preventDefault();">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-md bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:border-accent"
          />
          <button 
            type="submit"
            class="bg-accent text-secondary px-6 py-3 rounded-md font-bold hover:bg-white transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
      
      <!-- Quick Links -->
      {links && links.length > 0 && (
        <div>
          <h4 class="font-heading text-lg font-bold text-accent mb-4">Quick Links</h4>
          <ul class="space-y-2">
            {links.map((link) => (
              <li>
                <a href={link.url} class="hover:text-accent transition-colors">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
      
      <!-- Contact & Social -->
      <div>
        <h4 class="font-heading text-lg font-bold text-accent mb-4">Contact</h4>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${phone.replace(/[^0-9]/g, '')}`} class="hover:text-accent transition-colors">
              {phone}
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-white/80">{address}</span>
          </li>
        </ul>
        
        <!-- Social Media -->
        {social && social.length > 0 && (
          <div class="mt-6">
            <h5 class="font-heading text-sm font-bold text-accent mb-3">Follow Us</h5>
            <div class="flex gap-3">
              {social.map((item) => (
                <a 
                  href={item.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Follow us on ${item.platform}`}
                  class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-accent hover:text-secondary transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d={platformIcons[item.platform] || platformIcons.facebook} />
                  </svg>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
    
    <!-- Map Placeholder -->
    <div class="mb-12">
      <div class="aspect-video bg-white/5 rounded-lg flex items-center justify-center">
        <div class="text-center text-white/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <p>Map integration placeholder</p>
        </div>
      </div>
    </div>
    
    <!-- Copyright & Demo Badge -->
    <div class="border-t border-white/10 pt-6 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-white/60 text-sm">
        &copy; {new Date().getFullYear()} {name}. All rights reserved.
      </p>
      
      {demoMode && (
        <p class="text-white/60 text-sm">
          Demo redesign by <a href="https://mistystep.io" target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">Misty Step</a>
        </p>
      )}
    </div>
  </div>
</footer>
