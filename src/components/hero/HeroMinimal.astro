---
interface Props {
  headline: string;
  subtext: string;
  cta?: { text: string; url: string };
}

const { headline, subtext, cta } = Astro.props;
---

<section class="relative min-h-[50vh] md:min-h-[60vh] flex items-center justify-center bg-primary text-white">
  <div class="container text-center px-4">
    <h1 class="font-heading text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight max-w-4xl mx-auto">
      {headline}
    </h1>
    <p class="text-xl md:text-2xl text-white/90 mb-10 max-w-2xl mx-auto leading-relaxed">
      {subtext}
    </p>
    {cta && (
      <a 
        href={cta.url}
        class="inline-block bg-white text-primary px-10 py-5 rounded-md text-xl font-bold hover:bg-accent hover:text-secondary transition-all duration-300 transform hover:scale-105 shadow-lg"
      >
        {cta.text}
      </a>
    )}
  </div>
  
  <!-- Decorative geometric elements -->
  <div class="absolute top-0 left-0 w-32 h-32 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2" aria-hidden="true"></div>
  <div class="absolute bottom-0 right-0 w-48 h-48 bg-white/5 rounded-full translate-x-1/2 translate-y-1/2" aria-hidden="true"></div>
</section>
