---
interface Props {
  image: string;
  headline: string;
  subtext: string;
  cta?: { text: string; url: string };
}

const { image, headline, subtext, cta } = Astro.props;
---

<section class="relative min-h-[70vh] md:min-h-[85vh] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src={image} 
      alt=""
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-secondary/60"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 container text-center text-white px-4">
    <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
      {headline}
    </h1>
    <p class="text-lg md:text-xl lg:text-2xl mb-8 max-w-2xl mx-auto text-white/90">
      {subtext}
    </p>
    {cta && (
      <a 
        href={cta.url}
        class="inline-block bg-primary text-white px-8 py-4 md:px-10 md:py-4 rounded-md text-lg font-medium hover:bg-accent hover:text-secondary transition-all duration-300 transform hover:scale-105"
      >
        {cta.text}
      </a>
    )}
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white/70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
