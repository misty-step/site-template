---
interface Quote {
  text: string;
  author: string;
  source?: string;
}

interface Props {
  quotes: Quote[];
}

const { quotes } = Astro.props;

// Determine grid columns based on quote count
const gridClass = quotes.length <= 2 
  ? 'md:grid-cols-2' 
  : 'md:grid-cols-2 lg:grid-cols-3';
---

<section class="bg-secondary text-white" id="testimonials">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        What Our Guests Say
      </h2>
      <div class="w-20 h-1 bg-accent mx-auto"></div>
    </div>
    
    <div class={`grid grid-cols-1 ${gridClass} gap-6 md:gap-8`}>
      {quotes.map((quote, index) => (
        <article class="bg-primary/10 rounded-lg p-6 md:p-8 border border-accent/20 hover:border-accent/50 transition-colors">
          <blockquote class="mb-6">
            <p class="text-lg md:text-xl italic text-white/90 leading-relaxed">
              "{quote.text}"
            </p>
          </blockquote>
          <footer class="border-t border-accent/20 pt-4">
            <cite class="not-italic">
              <span class="font-bold text-accent block">{quote.author}</span>
              {quote.source && (
                <span class="text-white/70 text-sm">{quote.source}</span>
              )}
            </cite>
          </footer>
        </article>
      ))}
    </div>
  </div>
</section>
