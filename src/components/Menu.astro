---
interface MenuItem {
  name: string;
  description?: string;
  price?: string;
}

interface MenuSection {
  name: string;
  items: MenuItem[];
}

interface Props {
  sections: MenuSection[];
}

const { sections } = Astro.props;
---

<section class="bg-background" id="menu">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-primary mb-4">
        Our Menu
      </h2>
      <div class="w-20 h-1 bg-accent mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      {sections.map((section) => (
        <div>
          <h3 class="font-heading text-2xl md:text-3xl font-bold text-secondary mb-6 pb-2 border-b-2 border-accent">
            {section.name}
          </h3>
          <ul class="space-y-4">
            {section.items.map((item) => (
              <li class="flex justify-between items-start gap-4">
                <div class="flex-1">
                  <h4 class="font-bold text-text">{item.name}</h4>
                  {item.description && (
                    <p class="text-text/70 text-sm mt-1">{item.description}</p>
                  )}
                </div>
                {item.price && (
                  <span class="text-primary font-bold whitespace-nowrap">
                    {item.price}
                  </span>
                )}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
