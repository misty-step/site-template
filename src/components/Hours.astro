---
interface Props {
  schedule: Record<string, string>;
  address: string;
  phone: string;
  mapUrl?: string;
  businessName: string;
}

const { schedule, address, phone, mapUrl, businessName } = Astro.props;

// Convert schedule to JSON-LD format
const openHours = Object.entries(schedule)
  .filter(([_, hours]) => hours !== 'Closed')
  .map(([day, hours]) => {
    const dayMap: Record<string, string> = {
      'Monday': 'Monday',
      'Tuesday': 'Tuesday', 
      'Wednesday': 'Wednesday',
      'Thursday': 'Thursday',
      'Friday': 'Friday',
      'Saturday': 'Saturday',
      'Sunday': 'Sunday'
    };
    return {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": dayMap[day] || day,
      "opens": hours.split(' - ')[0]?.trim() || '',
      "closes": hours.split(' - ')[1]?.trim() || ''
    };
  });

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Restaurant",
  "name": businessName,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": address
  },
  "telephone": phone,
  "openingHoursSpecification": openHours
};
---

<section class="bg-background" id="hours">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-primary mb-4">
        Hours & Location
      </h2>
      <div class="w-20 h-1 bg-accent mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      <!-- Hours Table -->
      <div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
        <h3 class="font-heading text-2xl font-bold text-secondary mb-6">
          Hours
        </h3>
        <dl class="space-y-3">
          {Object.entries(schedule).map(([day, hours]) => (
            <div class="flex justify-between items-center py-2 border-b border-accent/10 last:border-0">
              <dt class="font-medium text-text">{day}</dt>
              <dd class={`text-text ${hours === 'Closed' ? 'text-red-500' : ''}`}>{hours}</dd>
            </div>
          ))}
        </dl>
      </div>
      
      <!-- Location & Contact -->
      <div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
        <h3 class="font-heading text-2xl font-bold text-secondary mb-6">
          Find Us
        </h3>
        
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              <p class="font-medium text-text">{address}</p>
              {mapUrl && (
                <a 
                  href={mapUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-primary hover:text-accent text-sm underline"
                >
                  Get Directions
                </a>
              )}
            </div>
          </div>
          
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${phone.replace(/[^0-9]/g, '')}`} class="text-text hover:text-primary">
              {phone}
            </a>
          </div>
        </div>
        
        <!-- Mini Map Placeholder -->
        <div class="mt-6 aspect-video bg-accent/20 rounded-lg flex items-center justify-center">
          <div class="text-center text-text/60">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-sm">Map View</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
</section>
