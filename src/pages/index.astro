---
import Base from "../layouts/Base.astro";

const businessName = "Business Name";
---

<Base title={businessName} description="A blank canvas for your website.">
  <main
    style="min-height: 100vh; display: grid; place-content: center; gap: 0.75rem; padding: var(--spacing-section) 1.5rem; text-align: center;"
  >
    <h1 style="font-family: var(--font-heading); font-size: clamp(2rem, 6vw, 3.5rem);">
      {businessName}
    </h1>
    <p style="color: var(--color-muted);">Replace this with your site content.</p>
  </main>
</Base>
