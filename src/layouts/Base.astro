---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  googleFontsQuery?: string;
  demoMode?: boolean;
}

const {
  title = "Business Website",
  description = "A blank-canvas scaffold for a business website.",
  googleFontsQuery = "",
  demoMode = false,
} = Astro.props;

const googleFontsHref = googleFontsQuery
  ? `https://fonts.googleapis.com/css2?${googleFontsQuery}`
  : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    {googleFontsHref && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="stylesheet" href={googleFontsHref} />
      </>
    )}
  </head>
  <body>
    <slot />
    {demoMode && (
      <aside class="demo-ribbon">
        Demo by Misty Step &mdash;
        <a href="https://mistystep.io" target="_blank" rel="noreferrer">
          mistystep.io
        </a>
      </aside>
    )}
  </body>
</html>

<style>
  .demo-ribbon {
    position: fixed;
    right: 0.75rem;
    bottom: 0.75rem;
    z-index: 50;
    display: inline-flex;
    gap: 0.25rem;
    align-items: center;
    padding: 0.4rem 0.6rem;
    border-radius: var(--radius-btn);
    border: 1px solid rgb(15 23 42 / 0.1);
    background: rgb(248 250 252 / 0.85);
    color: var(--color-muted);
    font-size: 0.75rem;
    backdrop-filter: blur(4px);
  }

  .demo-ribbon a {
    color: inherit;
  }
</style>
